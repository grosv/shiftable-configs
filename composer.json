{
    "name": "grosv/shiftable-configs",
    "description": "Modify core Laravel configurations withoug modifying the config files themselves",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ed Grosvenor",
            "email": "ed.grosvenor@wickedviral.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.3",
        "illuminate/support": "^7.0|^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^5.0",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "autoload": {
        "psr-4": {
            "Grosv\\ShiftableConfigs\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "App\\": "vendor/orchestra/testbench-core/laravel/app"
        }
    },
    "extra": {
        "laravel": {
            "providers": "Grosv\\ShiftableConfigs\\ShiftableConfigs"
        }
    },
    "scripts": {
        "lint": "php-cs-fixer fix -v",
        "test:unit": "phpunit",
        "test": [
            "@lint",
            "@test:unit"
        ]
    }
}
